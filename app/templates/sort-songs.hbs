<h3>Sortable Grid</h3>

<table>
  <thead>
    <tr>
      <th {{action "sortHeader" "name"}}>Name {{{nameArrow}}}</th>
      <th {{action "sortHeader" "artist"}}>Artist {{{artistArrow}}}</th>
      <th {{action "sortHeader" "album"}}>Album {{{albumArrow}}}</th>
      <th {{action "sortHeader" "time"}}>Time {{{timeArrow}}}</th>
    </tr>
  </thead>
  <tbody>
    {{#each sortedSongs as |song|}}
    <tr>
      <td>{{song.name}}</td>
      <td>{{song.artist}}</td>
      <td>{{song.album}}</td>
      <td>{{song.time}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>

{{outlet}}
